if [ "$EUID" -ne 0 ]
then echo "Please run as root"
	exit
fi

echo "\tChanging DNS resolver\n"
echo "# generated by magrab
nameserver 1.1.1.1
nameserver 1.0.0.1
" | sudo tee /etc/resolv.conf

echo "\tRemoving useless stuff\n"

sudo apt autoremove libreoffice*
sudo apt clean
sudo apt autoclean

echo "\tChecking for update\n"
sudo apt update
sudo apt full-upgrade -y
sudo apt clean

echo "\tInstalling Vim\n"

sudo apt install vim -y
